<ui:composition  xmlns="http://www.w3.org/1999/xhtml"
                 xmlns:h="http://java.sun.com/jsf/html"
                 xmlns:f="http://java.sun.com/jsf/core"
                 xmlns:ui="http://java.sun.com/jsf/facelets"
                 xmlns:p="http://primefaces.org/ui"
                 xmlns:x="http://xpert.com/faces">
    
  
    <h:form id="formCreateCalGuiaItem" >
        <p:fieldset legend="#{xmsg['generalData']}">
            <x:modalMessages/>

            <div class="container-fluid">
                 <div class="row">
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="calguia" value="* #{msg['calGuiaItem.calguia']}:" />
                         <h:selectOneMenu id="calguia" value="#{calGuiaItemMB.entity.calguia}" converter="entityConverter" styleClass="form-control" >
                             <x:initializer/>
                             <f:selectItem itemLabel="#{xmsg['select']}" />
                             <f:selectItems value="#{findAllBean.get(classMB.calGuia)}" 
                                            var="calGuia"
                                            itemLabel="#{calGuia}"/>
                         </h:selectOneMenu>
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="limiteInferior" value="#{msg['calGuiaItem.limiteInferior']}:" />
                         <p:inputMask id="limiteInferior" mask="9?999999999" placeHolder="" value="#{calGuiaItemMB.entity.limiteInferior}" styleClass="form-control" />
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="limiteSuperior" value="#{msg['calGuiaItem.limiteSuperior']}:" />
                         <p:inputMask id="limiteSuperior" mask="9?999999999" placeHolder="" value="#{calGuiaItemMB.entity.limiteSuperior}" styleClass="form-control" />
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="unitario:input" value="#{msg['calGuiaItem.unitario']}:" />
                         <x:inputNumber id="unitario" value="#{calGuiaItemMB.entity.unitario}" styleClass="form-control"/>
                     </div>

                 </div>
             </div>
        </p:fieldset>
        <h:outputText value="#{xmsg['requiredFieldsForm']}"/>
        <div class="uix-center">
            <x:securityArea rolesAllowed="calGuiaItem.create">
                <p:commandButton process="@form" update="@form" action="#{calGuiaItemMB.save}" value="#{xmsg['save']}" />
            </x:securityArea>
            <x:securityArea rolesAllowed="calGuiaItem.audit">
                <x:audit for="#{calGuiaItemMB.entity}"/>
            </x:securityArea>
        </div>
    </h:form>

</ui:composition>