package br.com.jsoft.centralfinanceira.vo;

import br.com.jsoft.centralfinanceira.modelo.enums.Periodicidade;
import java.math.BigDecimal;
import java.util.Date;

/**
 *
 * @author Juniel   
 */
public class VencimentoParcela {
    
    private Date primeiraParcela;
    
    private BigDecimal valorDaParcela;
    
    private Integer numParcelas;
    
    private Integer numPeriodicidade;
    
    private Periodicidade periodicidade = Periodicidade.MES;
    
    private BigDecimal valorAdicional;
    
    private String titulo;
    
    private boolean informarTotalParcelas = false;

    public Date getPrimeiraParcela() {
        return primeiraParcela;
    }

    public void setPrimeiraParcela(Date primeiraParcela) {
        this.primeiraParcela = primeiraParcela;
    }

    public BigDecimal getValorDaParcela() {
        return valorDaParcela;
    }

    public void setValorDaParcela(BigDecimal valorDaParcela) {
        this.valorDaParcela = valorDaParcela;
    }

    public Integer getNumParcelas() {
        return numParcelas;
    }

    public void setNumParcelas(Integer numParcelas) {
        this.numParcelas = numParcelas;
    }

    public Integer getNumPeriodicidade() {
        return numPeriodicidade;
    }

    public void setNumPeriodicidade(Integer numPeriodicidade) {
        this.numPeriodicidade = numPeriodicidade;
    }

    public Periodicidade getPeriodicidade() {
        return periodicidade;
    }

    public void setPeriodicidade(Periodicidade periodicidade) {
        this.periodicidade = periodicidade;
    }

    public BigDecimal getValorAdicional() {
        return valorAdicional;
    }

    public void setValorAdicional(BigDecimal valorAdicional) {
        this.valorAdicional = valorAdicional;
    }

    public String getTitulo() {
        return titulo;
    }

    public void setTitulo(String titulo) {
        this.titulo = titulo;
    }

    public boolean isInformarTotalParcelas() {
        return informarTotalParcelas;
    }

    public void setInformarTotalParcelas(boolean informarTotalParcelas) {
        this.informarTotalParcelas = informarTotalParcelas;
    }
    
    
    
}
