<ui:composition  xmlns="http://www.w3.org/1999/xhtml"
                 xmlns:h="http://java.sun.com/jsf/html"
                 xmlns:f="http://java.sun.com/jsf/core"
                 xmlns:ui="http://java.sun.com/jsf/facelets"
                 xmlns:p="http://primefaces.org/ui"
                 xmlns:x="http://xpert.com/faces">
    
  
    <h:form id="formCreateIndividualPerson" >
        <p:fieldset legend="#{xmsg['generalData']}">
            <x:modalMessages/>

            <div class="container-fluid">
                 <div class="row">
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="fullName" value="* #{msg['individualPerson.fullName']}:" />
                         <p:inputText id="fullName" value="#{individualPersonMB.entity.fullName}" maxlength="250"  styleClass="form-control"  />
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="cpf" value="* #{msg['individualPerson.cpf']}:" />
                         <p:inputText id="cpf" value="#{individualPersonMB.entity.cpf}" maxlength="20"  styleClass="form-control"  />
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="idCard" value="#{msg['individualPerson.idCard']}:" />
                         <p:inputText id="idCard" value="#{individualPersonMB.entity.idCard}" maxlength="250"  styleClass="form-control"  />
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="photo" value="#{msg['individualPerson.photo']}:" />
                         <p:inputText id="photo" value="#{individualPersonMB.entity.photo}" maxlength="250"  styleClass="form-control"  />
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="email" value="#{msg['individualPerson.email']}:" />
                         <p:inputText id="email" value="#{individualPersonMB.entity.email}" maxlength="250"  styleClass="form-control"  />
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="phone" value="* #{msg['individualPerson.phone']}:" />
                         <h:selectOneMenu id="phone" value="#{individualPersonMB.entity.phone}" converter="entityConverter" styleClass="form-control" >
                             <x:initializer/>
                             <f:selectItem itemLabel="#{xmsg['select']}" />
                             <f:selectItems value="#{findAllBean.get(classMB.phone)}" 
                                            var="phone"
                                            itemLabel="#{phone}"/>
                         </h:selectOneMenu>
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="address" value="* #{msg['individualPerson.address']}:" />
                         <h:selectOneMenu id="address" value="#{individualPersonMB.entity.address}" converter="entityConverter" styleClass="form-control" >
                             <x:initializer/>
                             <f:selectItem itemLabel="#{xmsg['select']}" />
                             <f:selectItems value="#{findAllBean.get(classMB.address)}" 
                                            var="address"
                                            itemLabel="#{address}"/>
                         </h:selectOneMenu>
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <div class="checkbox">
                             <label>
                                 <h:selectBooleanCheckbox id="active" value="#{individualPersonMB.entity.active}" />
                                 #{msg['individualPerson.active']}
                             </label>
                         </div>
                     </div>

                 </div>
             </div>
        </p:fieldset>
        <h:outputText value="#{xmsg['requiredFieldsForm']}"/>
        <div class="uix-center">
            <x:securityArea rolesAllowed="individualPerson.create">
                <p:commandButton process="@form" update="@form" action="#{individualPersonMB.save}" value="#{xmsg['save']}" />
            </x:securityArea>
            <x:securityArea rolesAllowed="individualPerson.audit">
                <x:audit for="#{individualPersonMB.entity}"/>
            </x:securityArea>
        </div>
    </h:form>

</ui:composition>