<ui:composition  xmlns="http://www.w3.org/1999/xhtml"
                 xmlns:h="http://java.sun.com/jsf/html"
                 xmlns:f="http://java.sun.com/jsf/core"
                 xmlns:ui="http://java.sun.com/jsf/facelets"
                 xmlns:p="http://primefaces.org/ui"
                 xmlns:x="http://xpert.com/faces">
    
  
    <h:form id="formCreateLegalPerson" >
        <p:fieldset legend="#{xmsg['generalData']}">
            <x:modalMessages/>

            <div class="container-fluid">
                 <div class="row">
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="subsidiary" value="#{msg['legalPerson.subsidiary']}:" />
                         <h:selectOneMenu id="subsidiary" value="#{legalPersonMB.entity.subsidiary}" converter="entityConverter" styleClass="form-control" >
                             <x:initializer/>
                             <f:selectItem itemLabel="#{xmsg['select']}" />
                             <f:selectItems value="#{findAllBean.get(classMB.legalPerson)}" 
                                            var="legalPerson"
                                            itemLabel="#{legalPerson}"/>
                         </h:selectOneMenu>
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="corporateName" value="* #{msg['legalPerson.corporateName']}:" />
                         <p:inputText id="corporateName" value="#{legalPersonMB.entity.corporateName}" maxlength="250"  styleClass="form-control"  />
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="fancyName" value="* #{msg['legalPerson.fancyName']}:" />
                         <p:inputText id="fancyName" value="#{legalPersonMB.entity.fancyName}" maxlength="250"  styleClass="form-control"  />
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="cnpj" value="* #{msg['legalPerson.cnpj']}:" />
                         <p:inputText id="cnpj" value="#{legalPersonMB.entity.cnpj}" maxlength="20"  styleClass="form-control"  />
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="stateRegistration" value="#{msg['legalPerson.stateRegistration']}:" />
                         <p:inputText id="stateRegistration" value="#{legalPersonMB.entity.stateRegistration}" maxlength="20"  styleClass="form-control"  />
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="photo" value="#{msg['legalPerson.photo']}:" />
                         <p:inputText id="photo" value="#{legalPersonMB.entity.photo}" maxlength="250"  styleClass="form-control"  />
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="email" value="#{msg['legalPerson.email']}:" />
                         <p:inputText id="email" value="#{legalPersonMB.entity.email}" maxlength="250"  styleClass="form-control"  />
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="phone" value="* #{msg['legalPerson.phone']}:" />
                         <h:selectOneMenu id="phone" value="#{legalPersonMB.entity.phone}" converter="entityConverter" styleClass="form-control" >
                             <x:initializer/>
                             <f:selectItem itemLabel="#{xmsg['select']}" />
                             <f:selectItems value="#{findAllBean.get(classMB.phone)}" 
                                            var="phone"
                                            itemLabel="#{phone}"/>
                         </h:selectOneMenu>
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="address" value="* #{msg['legalPerson.address']}:" />
                         <h:selectOneMenu id="address" value="#{legalPersonMB.entity.address}" converter="entityConverter" styleClass="form-control" >
                             <x:initializer/>
                             <f:selectItem itemLabel="#{xmsg['select']}" />
                             <f:selectItems value="#{findAllBean.get(classMB.address)}" 
                                            var="address"
                                            itemLabel="#{address}"/>
                         </h:selectOneMenu>
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <div class="checkbox">
                             <label>
                                 <h:selectBooleanCheckbox id="active" value="#{legalPersonMB.entity.active}" />
                                 #{msg['legalPerson.active']}
                             </label>
                         </div>
                     </div>

                 </div>
             </div>
        </p:fieldset>
        <h:outputText value="#{xmsg['requiredFieldsForm']}"/>
        <div class="uix-center">
            <x:securityArea rolesAllowed="legalPerson.create">
                <p:commandButton process="@form" update="@form" action="#{legalPersonMB.save}" value="#{xmsg['save']}" />
            </x:securityArea>
            <x:securityArea rolesAllowed="legalPerson.audit">
                <x:audit for="#{legalPersonMB.entity}"/>
            </x:securityArea>
        </div>
    </h:form>

</ui:composition>