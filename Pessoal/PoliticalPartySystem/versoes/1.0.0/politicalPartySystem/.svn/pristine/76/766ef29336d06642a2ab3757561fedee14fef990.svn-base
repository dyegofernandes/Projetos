<ui:composition  xmlns="http://www.w3.org/1999/xhtml"
                 xmlns:h="http://java.sun.com/jsf/html"
                 xmlns:f="http://java.sun.com/jsf/core"
                 xmlns:ui="http://java.sun.com/jsf/facelets"
                 xmlns:p="http://primefaces.org/ui"
                 xmlns:x="http://xpert.com/faces">
    <h:form id="formDetailMessageBoards" styleClass="uix-form-detail">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                    <h:outputLabel value="#{msg['messageBoards.title']}:" styleClass="control-label" /><br/>
                    <h:outputText value="#{messageBoardsMB.entity.title}" styleClass="uix-content-detail"/>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                    <h:outputLabel value="#{msg['messageBoards.extension']}:" styleClass="control-label" /><br/>
                    <h:outputText value="#{messageBoardsMB.entity.extension}" styleClass="uix-content-detail"/>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                    <h:outputLabel value="#{msg['messageBoards.document']}:" styleClass="control-label" /><br/>
                    <h:outputText value="#{messageBoardsMB.entity.document}" styleClass="uix-content-detail"/>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                    <h:outputLabel value="#{msg['messageBoards.active']}:" styleClass="control-label" /><br/>
                    <h:outputText value="#{messageBoardsMB.entity.active}" converter ="yesNoConverter"  styleClass="uix-content-detail"/>
                </div>
           </div>
         </div>
        <p:separator/>
        <div class="uix-center">
            <p:commandButton type="button" value="#{xmsg['close']}" onclick="PF('widgetMessageBoardsDetail').hide()" />
            <x:securityArea rolesAllowed="messageBoards.audit">
                <x:audit for="#{messageBoardsMB.entity}"/>
            </x:securityArea>
        </div>
    </h:form>
</ui:composition>