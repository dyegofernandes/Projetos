<ui:composition  xmlns="http://www.w3.org/1999/xhtml"
                 xmlns:h="http://java.sun.com/jsf/html"
                 xmlns:f="http://java.sun.com/jsf/core"
                 xmlns:ui="http://java.sun.com/jsf/facelets"
                 xmlns:p="http://primefaces.org/ui"
                 xmlns:x="http://xpert.com/faces">
    
  
    <h:form id="formCreateGerente" >
        <p:fieldset legend="#{xmsg['generalData']}">
            <x:modalMessages/>

            <div class="container-fluid">
                 <div class="row">
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="nome" value="* #{msg['gerente.nome']}:" />
                         <p:inputText id="nome" value="#{gerenteMB.entity.nome}" maxlength="200"  styleClass="form-control"  />
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="rg" value="* #{msg['gerente.rg']}:" />
                         <p:inputText id="rg" value="#{gerenteMB.entity.rg}" maxlength="50"  styleClass="form-control"  />
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="cpf" value="* #{msg['gerente.cpf']}:" />
                         <p:inputText id="cpf" value="#{gerenteMB.entity.cpf}" maxlength="20"  styleClass="form-control"  />
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel for="dataNascimento" value="#{msg['gerente.dataNascimento']}:" />
                         <p:calendar id="dataNascimento" value="#{gerenteMB.entity.dataNascimento}" 
                                     showOn="button" pattern="dd/MM/yyyy" styleClass="uix-calendar"  >
                             <x:mask/>
                         </p:calendar>
                     </div>
                      <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                         <h:outputLabel value="#{msg['gerente.telefones']}:" />
                         <h:selectManyCheckbox id="telefones" value="#{gerenteMB.entity.telefones}" converter="entityConverter" >
                             <x:initializer/>
                             <f:selectItems value="#{findAllBean.get(classMB.telefone)}" 
                                            var="telefone"
                                            itemLabel="#{telefone}"/>
                         </h:selectManyCheckbox>
                     </div>

                 </div>
             </div>
        </p:fieldset>
        <h:outputText value="#{xmsg['requiredFieldsForm']}"/>
        <div class="uix-center">
            <x:securityArea rolesAllowed="gerente.create">
                <p:commandButton process="@form" update="@form" action="#{gerenteMB.save}" value="#{xmsg['save']}" />
            </x:securityArea>
            <x:securityArea rolesAllowed="gerente.audit">
                <x:audit for="#{gerenteMB.entity}"/>
            </x:securityArea>
        </div>
    </h:form>

</ui:composition>