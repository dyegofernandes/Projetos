<ui:composition  xmlns="http://www.w3.org/1999/xhtml"
                 xmlns:h="http://java.sun.com/jsf/html"
                 xmlns:f="http://java.sun.com/jsf/core"
                 xmlns:ui="http://java.sun.com/jsf/facelets"
                 xmlns:p="http://primefaces.org/ui"
                 xmlns:x="http://xpert.com/faces">


    <h:form id="formCreateProponente" >
        <x:modalMessages autoUpdate="true"/>
        <p:fieldset legend="#{xmsg['generalData']}">
            <div class="container-fluid">
                <div class="row">

                    <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12">
                        <h:outputLabel for="fornecedor" value="#{msg['proponente.fornecedor']}:" />
                        <h:selectOneMenu id="fornecedor" value="#{proponenteMB.entity.fornecedor}" converter="entityConverter" styleClass="form-control" >
                            <x:initializer/>
                            <f:selectItem itemLabel="#{xmsg['select']}" />
                            <f:selectItems value="#{findAllBean.get(classMB.fornecedor)}" 
                                           var="fornecedor"
                                           itemLabel="#{fornecedor}"/>
                        </h:selectOneMenu>
                    </div>
                    
                </div>
            </div>
        </p:fieldset>
        <h:outputText value="#{xmsg['requiredFieldsForm']}"/>
        <div class="uix-center">
            <x:securityArea rolesAllowed="proponente.create">
                <p:commandButton process="@form" update="@form" action="#{proponenteMB.save}" value="#{xmsg['save']}" />
            </x:securityArea>
            <x:securityArea rolesAllowed="proponente.audit">
                <x:audit for="#{proponenteMB.entity}"/>
            </x:securityArea>
        </div>
    </h:form>

</ui:composition>