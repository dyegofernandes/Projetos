<ui:composition  xmlns="http://www.w3.org/1999/xhtml"
                 xmlns:h="http://java.sun.com/jsf/html"
                 xmlns:f="http://java.sun.com/jsf/core"
                 xmlns:ui="http://java.sun.com/jsf/facelets"
                 xmlns:p="http://primefaces.org/ui"
                 xmlns:x="http://xpert.com/faces">


    <h:form id="formFindFornecedor" >
        <x:modalMessages/>

        <div class="container-fluid">
            <div class="row">
                <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12" style="width:100%">
                    <div style="input-finds_left">
                        <x:cnpj id="cnpjBusca" value="#{fornecedorMB.cnpjBusca}" placeholder="#{msg['fornecedor.find.cnpj']}" styleClass="form-control input-finds"  
                                />
                    </div>
                    <p:commandButton process="@this cnpjBusca" update="formFindFornecedor formCreateFornecedor"  value="#{msg['fornecedor.find']}" class="button-finds" 
                                     actionListener = "#{fornecedorMB.buscarFornecedor()}"/>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12" style="width:100%">
                    <div class="div-button-new">
                        <x:securityArea rolesAllowed="fornecedor.create">
                            <p:commandButton process="@form" update="formFindFornecedor formCreateFornecedor"  value="#{msg['fornecedor.new']}" class="button-new" 
                                             actionListener = "#{fornecedorMB.novo()}"/>
                        </x:securityArea>

                    </div>
                    <div class="div-button-edit">
                        <x:securityArea rolesAllowed="fornecedor.editar">
                            <p:commandButton process="@form" update="formFindFornecedor formCreateFornecedor"  value="#{msg['fornecedor.edit']}" class="button-edit" 
                                             rendered="#{fornecedorMB.entity.id!=null}" actionListener = "#{fornecedorMB.editar()}"/>
                        </x:securityArea>

                    </div>
                    <div class="div-button-delete">
                        <x:securityArea rolesAllowed="fornecedor.delete">
                            <p:commandButton process="@form" update="formFindFornecedor formCreateFornecedor"  value="#{msg['fornecedor.delete']}" class="button-delete" 
                                             rendered="#{fornecedorMB.entity.id!=null}" actionListener = "#{fornecedorMB.excluir()}">
                                <x:confirmation message="#{xmsg['confirmDelete']} - #{fornecedorMB.entity.nomeFantasia}" />
                            </p:commandButton>

                        </x:securityArea>

                    </div>
                </div>
            </div>
        </div>
    </h:form>

</ui:composition>