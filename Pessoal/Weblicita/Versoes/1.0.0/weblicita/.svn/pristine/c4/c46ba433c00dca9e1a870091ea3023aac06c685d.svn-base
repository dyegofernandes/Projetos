<ui:composition  xmlns="http://www.w3.org/1999/xhtml"
                 xmlns:h="http://java.sun.com/jsf/html"
                 xmlns:f="http://java.sun.com/jsf/core"
                 xmlns:ui="http://java.sun.com/jsf/facelets"
                 xmlns:p="http://primefaces.org/ui"
                 xmlns:x="http://xpert.com/faces">


    <h:form id="formFindPedidoLicitacao" >
        <x:modalMessages/>

        <div class="container-fluid">
            <div class="row">
                <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12" style="width:100%">
                    <div style="input-finds_left">
                        <p:inputText id="numeroProcessoAdministrativo" value="#{pedidoLicitacaoMB.numeroProcessoAdministrativo}" placeholder="#{msg['pedidoLicitacao.find.numeroProcessoAdministrativo']}" maxlength="20"  styleClass="form-control input-finds"  />
                    </div>
                    <p:commandButton process="@form" update="formFindPedidoLicitacao formCreatePedidoLicitacao"  value="#{msg['pedidoLicitacao.find']}" class="button-finds" 
                                     actionListener="#{pedidoLicitacaoMB.buscar()}"/>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-4 col-md-6 col-sm-6 col-xs-12" style="width:100%">
                    <div class="div-button-new">
                        <x:securityArea rolesAllowed="pedidoLicitacao.create">
                            <p:commandButton process="@form" update="formFindPedidoLicitacao formCreatePedidoLicitacao"  value="#{msg['pedidoLicitacao.new']}" class="button-new" 
                                             actionListener="#{pedidoLicitacaoMB.novo()}"/>
                        </x:securityArea>
                    </div>
                    <div class="div-button-edit">
                        <x:securityArea rolesAllowed="pedidoLicitacao.editar">
                            <p:commandButton process="@form" update="formFindPedidoLicitacao formCreatePedidoLicitacao"  value="#{msg['pedidoLicitacao.edit']}" class="button-edit" 
                                             actionListener="#{pedidoLicitacaoMB.editar()}" rendered="#{pedidoLicitacaoMB.entity.id!=null}"/>
                        </x:securityArea>
                    </div>
                    <div class="div-button-delete">
                        <x:securityArea rolesAllowed="pedidoLicitacao.desativar">
                            <p:commandButton process="@form" update="formFindPedidoLicitacao formCreatePedidoLicitacao"  value="#{msg['pedidoLicitacao.disable']}" class="button-disable" 
                                             actionListener="#{pedidoLicitacaoMB.desativar()}" rendered="#{pedidoLicitacaoMB.entity.id!=null}" />
                        </x:securityArea>
                    </div>
                </div>
            </div>
        </div>
    </h:form>

</ui:composition>